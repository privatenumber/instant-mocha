{
	"name": "instant-mocha",
	"version": "0.0.0-semantic-release",
	"description": "Build tests with Webpack and run them with Mocha in one command",
	"keywords": [
		"webpack",
		"mocha",
		"runner"
	],
	"license": "MIT",
	"repository": "privatenumber/instant-mocha",
	"funding": "https://github.com/privatenumber/instant-mocha?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin",
		"dist"
	],
	"main": "index.js",
	"bin": "bin/instant-mocha.js",
	"scripts": {
		"lint": "eslint .",
		"dev": "esno src/cli.ts",
		"build": "tsc",
		"test": "jest tests/*.ts && :"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint",
			"npm test"
		]
	},
	"peerDependencies": {
		"mocha": "^6.1.4 || ^8.3.2",
		"webpack": "^4.40.0 || ^5.0.0"
	},
	"dependencies": {
		"aggregate-error": "^3.1.0",
		"ansi-escapes": "^4.3.2",
		"memfs": "^3.2.2",
		"minimist": "^1.2.5",
		"source-map-support": "^0.5.19",
		"yargs": "^16.2.0"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config-typescript": "^0.1.14",
		"@types/mocha": "^8.2.2",
		"@types/yargs": "^16.0.1",
		"chai": "^4.3.4",
		"es-jest": "^1.2.0",
		"eslint": "^7.24.0",
		"esno": "^0.5.0",
		"execa": "^5.0.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"mocha": "^8.3.2",
		"typescript": "^4.2.4",
		"webpack": "^5.35.1",
		"webpack4": "npm:webpack@4.0.0"
	},
	"eslintConfig": {
		"extends": "@pvtnbr/eslint-config-typescript",
		"ignorePatterns": [
			"tests/fixture"
		],
		"overrides": [
			{
				"files": "cli.ts",
				"rules": {
					"unicorn/no-process-exit": "off"
				}
			}
		]
	}
}

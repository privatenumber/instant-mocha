{
	"name": "instant-mocha",
	"version": "0.0.0-semantic-release",
	"description": "Build tests with Webpack and run them with Mocha in one command",
	"keywords": [
		"webpack",
		"mocha",
		"runner"
	],
	"license": "MIT",
	"repository": "privatenumber/instant-mocha",
	"funding": "https://github.com/privatenumber/instant-mocha?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin",
		"dist"
	],
	"main": "index.js",
	"bin": "bin/instant-mocha.js",
	"scripts": {
		"prepare": "simple-git-hooks",
		"lint": "eslint .",
		"dev": "esno src/cli.ts",
		"build": "tsc",
		"test": "jest"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm build && pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint",
			"npm test"
		]
	},
	"peerDependencies": {
		"mocha": "^6.1.4 || ^8.3.2",
		"webpack": "^4.40.0 || ^5.0.0"
	},
	"dependencies": {
		"aggregate-error": "^3.1.0",
		"ansi-escapes": "^4.3.2",
		"fs-require": "^1.4.0",
		"memfs": "^3.4.0",
		"minimist": "^1.2.5",
		"source-map-support": "^0.5.21",
		"yargs": "^16.2.0"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.7.0",
		"@types/jest": "^29.2.3",
		"@types/mocha": "^9.0.0",
		"@types/yargs": "^17.0.7",
		"chai": "^4.3.4",
		"es-jest": "^1.5.0",
		"eslint": "^7.32.0",
		"esno": "^0.9.1",
		"execa": "^5.1.1",
		"jest": "^27.3.1",
		"lint-staged": "^13.0.3",
		"lodash-es": "^4.17.21",
		"mocha": "^8.3.2",
		"simple-git-hooks": "^2.8.1",
		"typescript": "^4.5.2",
		"webpack": "^5.35.1",
		"webpack4": "npm:webpack@4.0.0"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"tests/fixture"
		]
	}
}

{
	"name": "instant-mocha",
	"version": "0.0.0-semantic-release",
	"description": "Build tests with Webpack and run them with Mocha in one command",
	"keywords": [
		"webpack",
		"mocha",
		"runner"
	],
	"license": "MIT",
	"repository": "privatenumber/instant-mocha",
	"funding": "https://github.com/privatenumber/instant-mocha?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin",
		"dist"
	],
	"bin": "dist/cli.js",
	"scripts": {
		"prepare": "simple-git-hooks",
		"lint": "eslint --cache .",
		"type-check": "tsc --noEmit",
		"dev": "tsx src/cli.ts",
		"build": "pkgroll --minify",
		"test": "tsx tests"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts}": "pnpm lint"
	},
	"peerDependencies": {
		"mocha": "8 || 9 || 10",
		"webpack": "4 || 5"
	},
	"dependencies": {
		"fs-require": "^1.4.0",
		"memfs": "^3.4.12",
		"source-map-support": "^0.5.21",
		"yargs": "^16.2.0"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.33.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "^18.11.9",
		"@types/yargs": "^17.0.7",
		"aggregate-error": "^4.0.1",
		"chai": "^4.3.4",
		"es-jest": "^2.1.0",
		"eslint": "^8.27.0",
		"execa": "^6.1.0",
		"fs-fixture": "^1.1.0",
		"lint-staged": "^13.0.3",
		"lodash-es": "^4.17.21",
		"manten": "^0.5.0",
		"mocha": "10",
		"mocha8": "npm:mocha@8",
		"mocha9": "npm:mocha@9",
		"pkgroll": "^1.4.0",
		"simple-git-hooks": "^2.8.1",
		"tsx": "^3.12.1",
		"typescript": "^4.9.3",
		"webpack": "5",
		"webpack4": "npm:webpack@4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"tests/fixture"
		]
	}
}
